\RequirePackage{stackengine}
\setstackgap{L}{.5\baselineskip}
\newcommand\markabove[2]{{%
  \sffamily\bfseries\boldmath\color{\todocolor}%
  \hsmash{\uppertip}% 
  \smash{\toplap{#1}{\scriptsize#2}}%
}}
\newcommand\markbelow[2]{{%
  \sffamily\bfseries\boldmath\color{\todocolor}% 
  \hsmash{\lowertip}%
  \smash{\bottomlap{#1}{\scriptsize#2}}%
}}

 

