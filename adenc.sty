% \thmboxstyle{mdfdefinestyle name}{declaretheoremstyle name}{foreground color}{background color}
% normal box: line skip after label
\newcommand{\thmboxstyle}[4]{
  \mdfdefinestyle{#2}{
    linecolor = #3,
    backgroundcolor = #4,
    nobreak = true
  }
  \declaretheoremstyle[
    headfont = \bfseries\color{#3},
    mdframed = {style = #2},
    headpunct = {\\[0.5pt]},
    postheadspace = {0pt},
  ]{#1}
}

% compact box: no line skip after label
\newcommand{\compactthmboxstyle}[4]{
  \mdfdefinestyle{#2}{
    linecolor = #3,
    backgroundcolor = #4,
    nobreak = true, 
    skipabove = 5pt, 
    innertopmargin = 3pt,
    innerbottommargin = 5pt, 
  }
  \declaretheoremstyle[
    headfont = \bfseries\color{#3},
    mdframed = {style = #2},
    headpunct = {. }, 
    postheadspace = {0pt},
  ]{#1}
}

